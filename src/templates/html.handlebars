<!DOCTYPE html>
<html class="no-js {{ docs.page.meta.id }}">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>
    {{ docs.page.meta.title }}
  </title>
  <meta name="description" content="{{ docs.page.meta.description }}">
  <meta name="keywords" content="{{ docs.page.meta.keywords }}">
  <meta name="author" content="{{ docs.page.meta.author }}">
  <meta name="viewport" content="width=device-width">
  <meta property="og:title" content="{{ docs.page.meta.title }}" />
  <meta property="og:url" content="{{site.itemRoot}}{{routePath}}/" />
  <meta property="og:description" content="{{ docs.page.meta.description }}" />
  <meta property="og:site_name" content="admataz. Web apps and bespoke web development, London UK" />
  {{#if assets.img.[0]}}
  <meta property="og:image" content="{{site.homePageUrl}}{{outputPath}}{{assets.img.[0]}}"  />
  {{else}}
  <meta property="og:image" content="{{site.itemRoot}}assets/images/admataz_front.png" />
  {{/if}}
  <link rel="alternate" title="admataz. Web apps and bespoke web development, London UK" type="application/json"
    href="{{site.feedUrl}}" />
  <link rel="alternate" type="application/atom+xml" title="Blog" href="{{site.itemRoot}}feed.xml?type=blog" />
  
  <link href="/assets/favicon.png" rel="icon" type="image/png">

  <link rel="stylesheet" href="/main.css" />

  {{#each assets.css}}
  <link rel="stylesheet" href="{{this}}" />
  {{/each}}
  <script type="text/javascript" src="/assets/scripts/admataz-blocks.js"></script>
</head>

<body>
  <div id="top-bar">
    <div class="logo">
      {{{docs.admataz-logo.body}}}
    </div>
    <div class="main-nav">
      {{{docs.main-nav.body}}}
    </div>
  </div>


  <div id="page-content-container">
    <div id="content-main">
      <admataz-blocks scale="42" definedylimit="12" gapfrequency="0.7" randomness="10">
        {{{ pageContent }}} dd
      </admataz-blocks>
    </div>

    <div class="main-nav bottom">
      {{{docs.main-nav.body}}}
    </div>

    <div id="footer-bar">
      Â© adam davis 2019
    </div>
  </div>

  {{#each assets.js}}
  <script type="text/javascript" src="{{this}}"></script>
  {{/each}}

  <script>
    document.querySelector('admataz-blocks').setAttribute("containerwidth", document.body.clientWidth)
    window.addEventListener('resize', () => {
      document.querySelector('admataz-blocks').setAttribute("containerwidth", document.body.clientWidth)
    })
  </script>
</body>

</html>