<div class="body-content site-section">
  <div class="intro">
    {{{docs.page.body}}}
  </div>

  {{#if indexPages.listIndex }}
  <div class="articles-list">
    {{#each indexPages.listIndex.pages}}
    <a href='{{routePath}}'>
      <div class="article">
      <div class="datestamp">{{dateFormat meta.date}}</div>
      <h3>{{meta.title}}</h3>
      <p class="blurb">{{meta.description}}</p>
      {{#if assets.img.[0]}}
      <img src="{{outputPath}}{{assets.img.[0]}}" class="thumb" />
      {{/if}}

      <p class="more-link">more...</p>
    </div >
    </a>
    {{/each}}
  </div>
  {{/if}}


</div>